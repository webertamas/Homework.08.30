<Window x:Class="WpfApplication4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication4"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <ListView x:Name="productsListView" HorizontalAlignment="Left" Height="299" Margin="10,10,0,0" VerticalAlignment="Top" Width="383">            
        </ListView>
        <Button x:Name="addButton" Content="Hozzáadás" HorizontalAlignment="Left" Margin="398,10,0,0" VerticalAlignment="Top" Width="109" Height="24" Click="AddClick"/>
        <Button x:Name="removeButton" Content="Törlés" HorizontalAlignment="Left" Margin="398,39,0,0" VerticalAlignment="Top" Width="109" Height="24" Click="RemoveClick"/>
        <Button x:Name="editButton" Content="Módosít" HorizontalAlignment="Left" Margin="398,68,0,0" VerticalAlignment="Top" Width="109" Height="24" Click="EditClick"/>
        <Button x:Name="deleteAllButton" Content="Minden törlése" HorizontalAlignment="Left" Margin="398,97,0,0" VerticalAlignment="Top" Width="109" Height="24" Click="DeleteAllButtonClick"/>

    </Grid>
</Window>
